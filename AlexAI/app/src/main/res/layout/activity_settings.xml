<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/settingsView"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:text="Settings"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/settingsView"
        app:layout_constraintStart_toStartOf="@+id/settingsView"
        app:layout_constraintTop_toTopOf="@+id/settingsView" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="@+id/settingsView"
        app:layout_constraintStart_toStartOf="@+id/settingsView"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/settingsView"
        app:layout_constraintStart_toStartOf="@+id/settingsView"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogout" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/settingsView"
        app:layout_constraintStart_toStartOf="@+id/settingsView"
        app:layout_constraintTop_toBottomOf="@+id/textViewSettings">

        <TextView
            android:id="@+id/textViewLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecteaza limba dorita pentru AI"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButtonEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engleza" />

        <RadioButton
            android:id="@+id/radioButtonRomanian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Romanian" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>